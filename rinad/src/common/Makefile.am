SUBDIRS = tclap encoders

noinst_LTLIBRARIES = librinad.la

librinad_la_CFLAGS   =
librinad_la_CPPFLAGS =				\
	$(CPPFLAGS_EXTRA)			\
	$(LIBRINA_CFLAGS)			\
	$(LIBPROTOBUF_CFLAGS)			\
	-I$(srcdir)/tclap			\
	-I$(srcdir)/..
